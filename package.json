{
  "name": "img",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "watch:sass": "node-sass src/scss/main.scss ./css/style.comp.css -w",
    "fmt:js": "prettier --write ./js/script.js",
    "devbundle:js": "webpack -w --mode development",
    "devprefix:css": "postcss -w --use autoprefixer -b \"last 5 versions\" ./css/style.comp.css -o ./css/style.css",
    "devserver": "php -S 127.0.0.1:8081 -t .",
    "browsersync": "browser-sync start --proxy 127.0.0.1:8081 --files index.php css/style.css js/script.js",
    "start": "npm-run-all --parallel devbundle:js watch:sass devprefix:css devserver browsersync",
    "compile:sass": "node-sass sass/main.scss css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b \"last 5 versions\" ./css/style.comp.css -o ./css/style.prefix.css",
    "compress:css": "node-sass ./css/style.prefix.css ./css/style.css --output-style compressed",
    "bundle:js": "webpack --mode production",
    "build": "npm-run-all fmt:js bundle:js compile:sass prefix:css compress:css"
  },
  "devDependencies": {
    "autoprefixer": "^9.3.1",
    "browser-sync": "^2.26.3",
    "live-server": "^1.2.1",
    "node-sass": "^4.10.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.0.1",
    "prettier": "^1.15.3",
    "webpack": "^4.26.1",
    "webpack-cli": "^3.1.2"
  }
}
