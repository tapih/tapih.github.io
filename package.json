{
  "name": "img",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "watch:sass": "node-sass sass/main.scss ./css/style.css -w",
    "devserver": "php -S 127.0.0.1:8081 -t ./",
    "browsersync": "browser-sync start --proxy 127.0.0.1:8081 --files *.php css/style.css js/script.js",
    "start": "npm-run-all --parallel watch:sass devserver browsersync"
  },
  "devDependencies": {
    "browser-sync": "^2.26.3",
    "node-sass": "^4.10.0",
    "npm-run-all": "^4.1.3"
  }
}
